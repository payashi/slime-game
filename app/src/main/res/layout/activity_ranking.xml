<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.slime.Ranking">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ranking"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ranking"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/taps_1st"
        android:textSize="50dp"
        android:layout_marginStart="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="135dp"
        android:text="120" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="110"
        android:id="@+id/taps_2nd"
        android:textSize="50dp"
        android:layout_alignStart="@+id/taps_1st"
        android:layout_marginRight="100dp"
        android:layout_marginTop="220dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/taps_3rd"
        android:layout_marginTop="305dp"
        android:layout_marginRight="100dp"
        android:textSize="50dp"
        android:layout_alignStart="@+id/taps_2nd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="90"
        android:id="@+id/taps_4th"
        android:layout_marginRight="100dp"
        android:textSize="50dp"
        android:layout_marginTop="305dp" />

</RelativeLayout>
